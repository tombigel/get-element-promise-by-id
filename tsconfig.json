{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",                                  /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */
    "module": "ESNext",                                  /* Specify what module code is generated. */
    "moduleResolution": "bundler",                       /* Specify module resolution strategy for modern tools like Vite */
    "esModuleInterop": true,                             /* Emit additional JavaScript to ease support for importing CommonJS modules. */
    "forceConsistentCasingInFileNames": true,            /* Ensure that casing is correct in imports. */
    "strict": true,                                      /* Enable all strict type-checking options. */
    "skipLibCheck": true,                                /* Skip type checking all declaration files (*.d.ts). */
    "outDir": "./dist",                                  /* Specify the output directory for compiled files. */
    "declarationDir": "./dist/types",                    /* Specify the output directory for generated declaration files. */
    "removeComments": true,                              /* Disable emitting comments. */
    "declaration": true,                                 /* Generate declaration files */
    "declarationMap": true,                              /* Create sourcemaps for d.ts files. */
    "sourceMap": true,                                   /* Create source map files for emitted JavaScript files. */
    "types": ["vitest/globals"]                         /* Include type definitions for Vitest */
  }
}
